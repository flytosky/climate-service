# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.ClimateServiceController.home()						
GET		/testPage					controllers.Application.showClimateService()

# Climate Service
GET		/climateService/allServices					controllers.ClimateServiceController.showAllClimateServices()
GET		/climateService/add							controllers.ClimateServiceController.addClimateService()
GET     /climateService/addAClimateService          controllers.ClimateServiceController.addAClimateService()	
POST	/climateService/savePage					controllers.ClimateServiceController.passPageStr()
POST	/assets/html/climateService/serviceModels	controllers.ClimateServiceController.serviceModels()
GET		/mostRecentlyAddedClimateServices			controllers.ClimateServiceController.mostRecentlyAddedClimateServices()
GET     /mostPopularServices						controllers.ClimateServiceController.mostPopularServices()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
